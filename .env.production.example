# Application Configuration
APP_NAME=GoMeet
APP_ENV=production
APP_DEBUG=false
APP_URL=https://gomeet.example.com

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Container Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME=your-username/gomeet
IMAGE_TAG=latest

# Database Configuration
POSTGRES_DB=gomeet_prod
POSTGRES_USER=gomeet_prod_user
POSTGRES_PASSWORD=your-production-db-password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gomeet_prod
DB_SSL_MODE=prefer
DB_MAX_CONNECTIONS=20
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=300s

# Redis Configuration
REDIS_PASSWORD=your-production-redis-password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://gomeet.example.com,https://www.gomeet.example.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# WebRTC Configuration
WEBRTC_STUN_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.example.com:3478
TURN_SERVER_USERNAME=your-turn-username
TURN_SERVER_CREDENTIAL=your-turn-credential

# WebSocket Configuration
WS_PATH=/ws
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_PING_PERIOD=54s
WS_PONG_WAIT=60s
WS_WRITE_WAIT=10s

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Security Configuration
BCRYPT_COST=12
SESSION_SECRET=your-super-secret-session-key-min-32-characters
CSRF_SECRET=your-super-secret-csrf-key-min-32-characters

# Email Configuration (Optional)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@gomeet.example.com
SMTP_FROM_NAME=GoMeet

# Frontend Configuration
PUBLIC_API_URL=https://api.gomeet.example.com/api/v1
PUBLIC_WS_URL=wss://api.gomeet.example.com
PUBLIC_APP_NAME=GoMeet
PUBLIC_APP_VERSION=1.0.0
FRONTEND_PORT=5173

# LiveKit Configuration
LIVEKIT_HOST=your-livekit-host
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_ROOM_NAME_PREFIX=gomeet-

# Feature Flags
FEATURE_VIDEO_CALLING=true
FEATURE_SCREEN_SHARING=true
FEATURE_CHAT=true
FEATURE_FILE_SHARING=true
FEATURE_RECORDING=false
FEATURE_BREAKOUT_ROOMS=false

# Third-party Integrations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id
SENTRY_DSN=your-sentry-dsn

# Deployment Configuration
DEPLOY_SERVER_HOST=your-staging-server.example.com
DEPLOY_SERVER_USER=deploy
DEPLOY_PATH=/opt/gomeet
DEPLOY_SERVER_HOST_PROD=your-production-server.example.com
DEPLOY_SERVER_USER_PROD=deploy
DEPLOY_PATH_PROD=/opt/gomeet

# SSL Configuration (Optional)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/backups