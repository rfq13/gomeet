{
  "name": "gomeet",
  "version": "0.1.0",
  "private": true,
  "description": "GoMeet - Video conferencing platform with real-time collaboration",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter gomeet-backend dev\" \"pnpm --filter gomeet-frontend dev\"",
    "dev:backend": "pnpm --filter gomeet-backend dev",
    "dev:frontend": "pnpm --filter gomeet-frontend dev",
    "build": "pnpm --filter gomeet-backend build && pnpm --filter gomeet-frontend build",
    "build:backend": "pnpm --filter gomeet-backend build",
    "build:frontend": "pnpm --filter gomeet-frontend build",
    "start": "concurrently \"pnpm --filter gomeet-backend start\" \"pnpm --filter gomeet-frontend preview\"",
    "start:backend": "pnpm --filter gomeet-backend start",
    "start:frontend": "pnpm --filter gomeet-frontend preview",
    "lint": "pnpm --filter \"*\" lint",
    "lint:backend": "pnpm --filter gomeet-backend lint",
    "lint:frontend": "pnpm --filter gomeet-frontend lint",
    "typecheck": "pnpm --filter \"*\" typecheck",
    "test": "pnpm --filter \"*\" test",
    "test:backend": "pnpm --filter gomeet-backend test",
    "test:frontend": "pnpm --filter gomeet-frontend test",
    "clean": "pnpm --filter \"*\" clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate:up": "pnpm --filter gomeet-backend migrate:up",
    "migrate:down": "pnpm --filter gomeet-backend migrate:down"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
