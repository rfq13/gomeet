# Server Configuration
PORT=8080
GIN_MODE=debug

# Database Configuration
POSTGRE_URL=postgresql://username:password@localhost:5432/gomeet_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Alternative: Use REDIS_URL for connection string
# REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# CORS Configuration - NEW OPTIMIZED VERSION
# Development Origins (for local development)
CORS_DEVELOPMENT_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:5174,http://127.0.0.1:5175

# Production Origins (for production deployment)
CORS_PRODUCTION_ORIGINS=https://gomeet.filosofine.com,https://api-gomeet.filosofine.com,https://www.gomeet.filosofine.com

# Legacy CORS Configuration (deprecated, use above instead)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# CORS Performance Configuration
CORS_MAX_AGE=86400
CORS_DEBUG=true
CORS_ENABLE_METRICS=true

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GENERAL_REQUESTS=100
RATE_LIMIT_GENERAL_WINDOW=1m
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=1m
RATE_LIMIT_AUTHENTICATED_REQUESTS=1000
RATE_LIMIT_AUTHENTICATED_WINDOW=1m

# TURN Server Configuration (Enhanced for NAT Traversal)
TURN_SERVER=turn:localhost:3478
TURN_SECRET=your-turn-secret-key
TURN_PORT=3478
TURN_REALM=gomeet
TURN_ENABLED=true
TURN_MAX_BANDWIDTH=2000
TURN_TOTAL_BANDWIDTH=10000
TURN_ALTERNATE_SERVER=turn:backup-turn-server.com:3478

# LiveKit Configuration
LIVEKIT_HOST=localhost
LIVEKIT_PORT=7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_HTTP_PORT=7881
LIVEKIT_RTC_UDP_PORT=7882
LIVEKIT_RTC_TCP_PORT=7883
LIVEKIT_ENABLED=true

# SFU Configuration
SFU_ENABLED=true
SFU_SIMULCAST_LAYERS=3
SFU_MAX_PARTICIPANTS=50
SFU_BANDWIDTH_LIMIT=2000
SFU_VIDEO_QUALITY_HIGH=1280x720
SFU_VIDEO_QUALITY_MEDIUM=640x360
SFU_VIDEO_QUALITY_LOW=320x180

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_ICE_CANDIDATE_POOL_SIZE=10
WEBRTC_ICE_TRANSPORT_POLICY=all
WEBRTC_BUNDLE_POLICY=max-bundle
WEBRTC_RTCP_MUX_POLICY=require
WEBRTC_CONNECTION_TIMEOUT=30000

# Adaptive Bitrate Streaming Configuration
ADAPTIVE_BITRATE_ENABLED=true
VIDEO_QUALITY_THRESHOLD_HIGH=1000000
VIDEO_QUALITY_THRESHOLD_MEDIUM=500000
VIDEO_QUALITY_THRESHOLD_LOW=200000
BITRATE_ADJUSTMENT_INTERVAL=5000
CONNECTION_QUALITY_MONITORING_INTERVAL=5000

# WebRTC Monitoring and Logging
WEBRTC_MONITORING_ENABLED=true
WEBRTC_LOG_LEVEL=info
WEBRTC_STATS_COLLECTION_INTERVAL=10000
WEBRTC_METRICS_RETENTION_HOURS=24

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key

# DigitalOcean Configuration (optional)
DO_API_TOKEN=your-digitalocean-api-token